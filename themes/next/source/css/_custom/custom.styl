// Custom styles.
//主页文章添加阴影效果
 .post {
    margin-top: 60px;
    margin-bottom: 60px;
    padding: 25px;
    -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
	-moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
  }

//代码样式
  code {
      color: #fff  !important;
      background: #272822 !important;
  }
// 大代码块的自定义样式
  .highlight, pre {
      background-color: #272822 !important;
      color:  #fff;
  }

 .aplayer-list ol li {   
    /*列表底色      颜色代码 透明度 */
    background:rgba(0,0,0,0.5);
  }
 .aplayer-list ol li:hover {   
    /*列表悬停颜色  颜色代码 透明度*/
    background:rgba(140,0,210,0.8) none repeat scroll !important;
  }
 .aplayer-list-light {   
    /*列表播放歌曲颜色 颜色代码 透明度*/
    background:rgba(100,149,237,0.8) none repeat scroll !important;
  }
 #aplayer {    
	/*边框样式*/
    border-radius: 6px;
    div,ol {
    	border-radius: 6px;
   	}
  }
 /*字体颜色*/
 #aplayer *{color: #fff;}    

 /*列表歌曲信息的排版*/
 .aplayer-list-index{float:left;}
 .aplayer-list-title{float:left;}
 .aplayer-list-author{float:right;}